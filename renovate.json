{
  "extends": [
    "config:recommended"
  ],
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "flux",
    "kubernetes",
    "helm-values",
    "github-actions"
  ],
  "flux": {
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ],
    "ignoreDeps": [
      "josh5/unmanic"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ],
    "ignorePaths": [
      "**/flux-system/**"
    ]
  },
  "helm-values": {
    "commitMessageTopic": "Helm values {{depName}}",
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ],
    "ignorePaths": [
      "**/flux-system/**"
    ],
    "ignoreDeps": [
      "josh5/unmanic"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "factorio**",
        "nvidia**",
        "gpu**"
      ],
      "automerge": false,
      "automergeType": "pr"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
